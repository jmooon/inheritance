
package inheritance;
import java.util.Scanner;


class Shape{
    public double len, bre, area, perim;
    Shape(){
        len=0;
        bre=0;
        area = 0;
        perim=0;

    }
    public void getData(){

    }
    public void Display_Area(){
        
    }
    public void Display_Perimeter(){
        
    }
}

public class Inheritance {

    /**
     * @param args the command line arguments
     */
    
        
    public static void main(String[] args) {
        int choose;
        Boolean check = false;
        Scanner s=new Scanner (System.in);
        while (check == false){
        System.out.println("Press 1 for Triangle, 2 for rectangle, 3 for circle, 4 for parallelogram");
        choose=s.nextInt();
        switch(choose){
            case 1: 
                Triangle t=new Triangle();
                t.getData();
                t.Display_Area();
                t.Display_Perimeter();
                check = true;
                break;
            case 2: 
                Rectangle r=new Rectangle();
                r.getData();
                r.Display_Area();
                r.Display_Perimeter();
                check = true;
                break;
            case 3: 
                Circle q=new Circle();
                q.getData();
                q.Display_Area();
                q.Display_Perimeter();
                check = true;
                break;
            case 4: 
                Parallelogram p =new Parallelogram();
                p.getData();
                p.Display_Area();
                p.Display_Perimeter();
                check = true;
                break;
            default: System.out.println("Try again.");
                break;
        }
            
    }
    }
}
}
