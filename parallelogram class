package inheritance;
 import java.util.Scanner;
 /**
 *
 * @author jasmoon
 */
class Parallelogram extends Shape{
    double area, perim;
    @Override
    public void getData(){
        System.out.println("Enter base, then height: ");
        Scanner s=new Scanner (System.in);
        len=s.nextDouble();
        bre=s.nextDouble();
        System.out.println("Enter side: ");
        side=s.nextDouble();
    }
    @Override
    public void Display_Area(){
        area=len*bre;
        System.out.println("Area is: " + area);
    }
    @Override
    public void Display_Perimeter(){
        perim= 2*(len+side) ;
        System.out.println("Perimeter is: " + perim);
    }
}
