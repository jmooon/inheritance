}

public class Inheritance {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        int ch;
        Scanner s=new Scanner (System.in);
        System.out.println("Press 1 for Triangle, 2 for rectangle, 3 for circle, 4 for parallelogram");
        ch=s.nextInt();
        switch(ch){
            case 1: 
                Triangle t=new Triangle();
                t.getData();
                t.Display_Area();
                t.Display_Perimeter();
                break;
            case 2: 
                Rectangle r=new Rectangle();
                r.getData();
                r.Display_Area();
                r.Display_Perimeter();
                break;
            case 3: 
                Circle q=new Circle();
                q.getData();
                q.Display_Area();
                q.Display_Perimeter();
                break;
            case 4: 
                Parallelogram p =new Parallelogram();
                p.getData();
                p.Display_Area();
                p.Display_Perimeter();
                break;
            default: System.out.println("Try again.");
                break;
        }
            
    }
    }
}
}



